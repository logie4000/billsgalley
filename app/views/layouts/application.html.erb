<!DOCTYPE html>
<html>
  <head>
    <title>Galley</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
<div id="header">
<span id="header-icon"><%= image_tag "ship_32.png" %></span>
<span id="header-title">Bill's Galley</span>

<span id="header-links">
<% if session[:user_id] %>
  <% user = User.find(session[:user_id]) %>
  <%= "Welcome #{user.first_name} #{user.last_name}" %>
<% end %> | 
<%= link_to 'About', about_recipes_path %> | 
<%= link_to 'Recipes', recipes_path %> | 
<% if session[:user_id] %>
  <%= link_to 'Logout', logout_users_path %> | <%= link_to 'Profile', user_path(User.find(session[:user_id])) %>
<% else %>
  <%= link_to 'Login', login_users_path %> | <%= link_to 'Register', register_users_path %>
<% end %> |
</span>

</div>

    <div id="content">
      <%= yield %>
    </div>

  </body>
</html>
